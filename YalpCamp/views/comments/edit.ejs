<% include ../partials/header %>
<div class='container'>
    <div class='row'>
        <h1 style='text-align:center'>Edit the comment</h1>
        <div style="width:30%; margin:25px auto;">
        <form action= '/campgrounds/<%= campground_id%>/comments/<%= comment._id %>?_method=PUT' method= 'POST'>     
            <div class='form-group'>
        <!-- 这里用comment[author] 是为了req.body.comment 里面包含两个内容而服务的 -->
            <input class='form-control' type='text' name= 'comment[text]' value = '<%= comment.text%>'>
            </div>                      
            <div class='form-group'>
            <button class='btn btn-large btn-primary btn-block'>Sumbmit</button>
            </div>
        </form>
        </div>
        <a href='/campgrounds'>Go Back</a>
    </div>
</div>
